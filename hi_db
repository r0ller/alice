create table LEXICON(
word varchar(255),
gcat varchar(12),
lexeme varchar(32),
functor varchar(32),
PRIMARY KEY(word, gcat)
);

create table ENTITIES(
entity varchar(32) primary key references LEXICON(lexeme),
is_a varchar(32) references LEXICON(lexeme)
);

create table RELATIONS(
relation varchar(32) references LEXICON(lexeme),
object varchar(32) references ENTITIES(entity),
indirect_object varchar(32) references ENTITIES(entity),
PRIMARY KEY(relation, object, indirect_object)
);

create table PROPERTIES(
property varchar(32) primary key references LEXICON(lexeme)
);

create table EP_LOOKUP(
entity varchar(32) references ENTITIES(entity),
property varchar(32) references PROPERTIES(property),
PRIMARY KEY(entity, property)
);

